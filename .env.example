# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration (use same as main API)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hacklote?retryWrites=true&w=majority

# JWT Configuration (MUST match main API)
JWT_SECRET=your_jwt_secret_here_must_match_main_api

# Redis Configuration (Redis Cloud - for caching and performance)
REDIS_HOST=redis-11641.c11.us-east-1-2.ec2.redns.redis-cloud.com
REDIS_PORT=11641
REDIS_PASSWORD=r9cX1ZEznfKSbcz3X7RSHyhyEreCKyE3
REDIS_USERNAME=default

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,https://hacklote.vercel.app

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_PAYLOAD=1048576

# Message Encryption (32 characters required)
MESSAGE_ENCRYPTION_KEY=your_32_character_encryption_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/combined.log

# Asaas Integration
# Use Sandbox for tests: https://api-sandbox.asaas.com/v3
# Use Production for live: https://api.asaas.com/v3
ASAAS_API_BASE=https://api-sandbox.asaas.com/v3
ASAAS_API_KEY=$aact_hmlg_your_sandbox_api_key_here

# Webhook security token (sent as asaas-access-token header)
ASAAS_WEBHOOK_TOKEN=your_webhook_secret_token

# Optional: restrict inbound webhook requests by IP (comma or space separated)
# Recommended to set Asaas official IPs in production (see https://docs.asaas.com/docs/ips-oficiais-do-asaas)
# Example:
# ASAAS_WEBHOOK_IP_WHITELIST=52.67.12.206,18.230.8.159,54.94.136.112,54.94.183.101
ASAAS_WEBHOOK_IP_WHITELIST=

# Mediator PIX configuration (where the 5% fee will be transferred)
MEDIATOR_PIX_KEY=your_mediator_pix_key
# Types typically: EVP, CPF, CNPJ, EMAIL, CELLPHONE
MEDIATOR_PIX_KEY_TYPE=EVP
