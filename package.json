{
  "name": "zenith-chat-api",
  "version": "1.0.0",
  "description": "WebSocket-based real-time chat API for Zenith marketplace",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "pm2 start ecosystem.config.js --env production",
    "prod:stop": "pm2 stop zenith-chat-api",
    "prod:restart": "pm2 restart zenith-chat-api",
    "prod:reload": "pm2 reload zenith-chat-api",
    "prod:delete": "pm2 delete zenith-chat-api",
    "prod:logs": "pm2 logs zenith-chat-api",
    "prod:monit": "pm2 monit",
    "prod:status": "pm2 status",
    "backfill:marketitem-seller": "node ./scripts/backfill-marketitem-seller.js",
    "test": "node test-email-system.js",
    "test:email": "node test-email-system.js",
    "create:test-users": "node create-test-users.js",
    "images:migrate": "node ./scripts/migrateImagesToMongoDB.js",
    "images:check": "node ./scripts/checkImagesHealth.js",
    "images:clean": "node ./scripts/cleanCorruptedImages.js",
    "images:clean-all": "node ./scripts/cleanAllCorruptedImages.js",
    "images:diagnostic": "node ./scripts/diagnosticImageSystem.js",
    "images:test-upload": "node ./scripts/testUploadFlow.js",
    "images:test-buffer": "node ./scripts/testBufferStorage.js",
    "images:test-base64": "node ./scripts/testBase64Storage.js",
    "images:list": "node ./scripts/listAllImages.js",
    "reviews:fix-indexes": "node ./scripts/fixReviewIndexes.js",
    "optimize:indexes": "node ./scripts/add-performance-indexes.js"
  },
  "keywords": [
    "websocket",
    "chat",
    "realtime",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "git": "^0.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "pm2": "^6.0.13",
    "sharp": "^0.33.5",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
